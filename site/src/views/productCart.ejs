<!-- Trayendo el head -->
<%- include('partials/head', {title: 'Mi carrito'}) %>
<body>

    <!-- Trayendo el header -->
    <%- include('partials/header') %> 

    <main>
        <section class="carrito-container">
            <div class="titulos">
                <p class="titulo">Precio</p>
                <p class="titulo">Cantidad</p>
                <p class="titulo">Total</p>
            </div>

            <div class="productos">
                <div class="prod-resumen">
                    <p class="prod-name">Nombre del producto</p>
                    <div class="foto-container"><img src="./images/Bajo.jpg" alt="foto"></div>
                   
                    <div class="caracteristicas">          
                        <p>Color</p>
                        <p> Marca </p>
                        <p class="cant-mobile">Cantidad</p>
                        <p class="cant-mobile precio">$999</p>
                    </div>
                </div>

                <p class="cant">1</p>

                <div class="final">
                    <p class="total-prod">$999</p>
                    <p class="quitar">Quitar</p>
                </div>
                
            </div>

            <div class="total">
                <p>Total:</p>
                <p>$999</p>
            </div>
            <button type="submit" class="comprar">Iniciar compra</button>
        </section>

        <!-- Trayendo los productos destacados -->
        <%- include('partials/productosDestacados') %> 
        
    </main>

   <!-- Trayendo el footer -->
   <%- include('partials/footer') %> 

    <!-- Fin de la View -->
    
</body>
</html>