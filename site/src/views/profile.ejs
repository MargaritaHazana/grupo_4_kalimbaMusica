<%- include('partials/head', {title: 'Registrarme'}) %>
<body>
    <!-- Trayendo el header -->
    <%- include('partials/header') %>

    <section class="contenedor-gral">
        <h1>Mi perfil</h1>
        <!-- zona izq -->
        <div class="cont-info">
            <div class="cont-foto">
                <img class="foto" src="/avatars/<%=user.image%>">
            </div>
            <div class="cont-nombre">
                <p class="nombre"> <%= user.first_name %> </p> <p class="nombre"> <%= user.last_name %> </p>
            </div>
        </div>
        <!-- zona der -->
        <div class="cont-info2">
            <div class="cont-mail cont-data">
                <p class="preg">Mail: </p><p class="resp"> <%= user.email %></p>
            </div>
            <div class="cont-nombreu cont-data">
                <p class="preg">Nombre de usuario: </p><p class="resp"> <%= user.username %> </p>
            </div>
            <div class="cont-tel cont-data">
                <p class="preg">Tel√©fono: </p><p class="resp"> <%= user.tel %> </p>
            </div>
            <div class="cont-fecha cont-data">
                <p class="preg">Fecha de nacimiento: </p><p class="resp"> <%= user.birth_date %></p>
            </div>
        </div>

        <form class="cont-boton" action="/users/edit/<%= user.id %>" method="GET">
            <button type="submit" class="boton">Editar perfil</button>
        </form>
    </section>
    
</body>